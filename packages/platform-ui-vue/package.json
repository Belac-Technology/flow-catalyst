{
  "name": "@flowcatalyst/platform-ui",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --names \"BACKEND,STREAMS,UI,API\" --prefix-colors \"blue,magenta,green,yellow\" \"npm run dev:backend\" \"npm run dev:stream-processor\" \"wait-on http://localhost:8080/q/health && vite\" \"wait-on http://localhost:8080/q/health && npm run api:watch\"",
    "dev:ui": "vite",
    "dev:backend": "cd ../../core/flowcatalyst-platform && ../../gradlew quarkusDev",
    "dev:stream-processor": "wait-on http://localhost:8080/q/health && cd ../../core/flowcatalyst-stream-processor && ../../gradlew quarkusDev -Dquarkus.http.port=8082",
    "dev:db": "docker compose -f ../../docker-compose.dev.yml up -d",
    "dev:db:stop": "docker compose -f ../../docker-compose.dev.yml down",
    "dev:full": "npm run dev:db && npm run dev",
    "build": "npm run api:generate && vue-tsc -b && vite build",
    "preview": "vite preview",
    "api:generate": "openapi-ts",
    "api:watch": "vite-node scripts/watch-api.ts",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,vue,css}\"",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@primevue/themes": "^4.3.3",
    "@vee-validate/zod": "^4.15.1",
    "pinia": "^3.0.0",
    "primeicons": "^7.0.0",
    "primevue": "^4.3.3",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@hey-api/client-fetch": "^0.13.1",
    "@hey-api/openapi-ts": "^0.66.1",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/ui": "^3.2.0",
    "chokidar": "^4.0.0",
    "concurrently": "^9.1.0",
    "prettier": "^3.4.0",
    "typescript": "~5.8.0",
    "vite": "^7.0.0",
    "vitest": "^3.2.0",
    "vue-tsc": "^2.2.0",
    "wait-on": "^8.0.0"
  }
}
